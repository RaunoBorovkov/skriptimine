#!/bin/bash
#
# raami joonistamine
echo -n "sisesta ridade arv: "
read rida
echo -n "sisesta t채rnide arv: "
read tarn
# genereeri rea numbrid
for ((i = 1; i <= $rida;i++))
do
	echo -n "$i "
	# kui on esimene v천i viimane rida
	if [ $i -eq 1 -o $i -eq $rida ]; then
	# t채rnidest tulev rida
	for((j = 1; j <=$tarn; j++))
	do
		echo -n "* "
	done
# teised read
	else
		echo -n "* "
		# t체hikud
		for((j = 2; j < $tarn;j++))
		do
			echo -n " "
		done
	echo -n "* "
	fi
	echo
done
